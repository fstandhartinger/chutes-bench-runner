# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Chutes API
CHUTES_API_KEY=your_chutes_api_key_here
CHUTES_MODELS_CACHE_TTL_SECONDS=600
CHUTES_MAX_TOKENS_MARGIN=2048
CHUTES_MIN_OUTPUT_TOKENS=20000

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000
ADMIN_SECRET=your_admin_secret_here

# Signed export keys (base64 or PEM)
BENCH_SIGNING_PRIVATE_KEY=
BENCH_SIGNING_PUBLIC_KEY=

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_WORKER_SLOTS=1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Worker
WORKER_POLL_INTERVAL=5
WORKER_MAX_CONCURRENT=1
WORKER_STALE_RUN_MINUTES=60
WORKER_STALE_CHECK_INTERVAL=300

# Startup
SKIP_MODEL_SYNC=false

# Optional: Future Chutes IDP integration
# CHUTES_CLIENT_ID=
# CHUTES_CLIENT_SECRET=
# CHUTES_IDP_URL=https://api.chutes.ai

# Optional: Benchmark dataset configuration
TERMINAL_BENCH_DATASET=
TERMINAL_BENCH_SPLIT=test

# PDF Generation
PDF_FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
