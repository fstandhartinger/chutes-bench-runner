# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Chutes API
CHUTES_API_KEY=your_chutes_api_key_here
CHUTES_MODELS_CACHE_TTL_SECONDS=600
CHUTES_MAX_TOKENS_MARGIN=2048
CHUTES_MIN_OUTPUT_TOKENS=16384
CHUTES_MAX_OUTPUT_TOKENS_CAP=65535

# Gremium API (optional)
ENABLE_GREMIUM_PROVIDER=false
GREMIUM_API_BASE_URL=https://chutes-model-gremium.onrender.com
GREMIUM_API_KEY=
GREMIUM_TIMEOUT_SECONDS=600
GREMIUM_ITEM_TIMEOUT_SECONDS=1800
GREMIUM_ITEM_ATTEMPTS=3

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000
ADMIN_SECRET=your_admin_secret_here
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Currently under maintenance as a new version is being deployed.

# Signed export keys (base64 or PEM)
BENCH_SIGNING_PRIVATE_KEY=
BENCH_SIGNING_PUBLIC_KEY=

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_WORKER_SLOTS=1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Worker
WORKER_POLL_INTERVAL=5
WORKER_MAX_CONCURRENT=1
WORKER_ITEM_TIMEOUT_SECONDS=1200
WORKER_ITEM_ATTEMPTS=5
WORKER_STALE_RUN_MINUTES=60
WORKER_STALE_CHECK_INTERVAL=300

# Startup
SKIP_MODEL_SYNC=false

# Optional: Future Chutes IDP integration
# CHUTES_CLIENT_ID=
# CHUTES_CLIENT_SECRET=
# CHUTES_IDP_URL=https://api.chutes.ai

# Optional: Benchmark dataset configuration
TERMINAL_BENCH_DATASET=
TERMINAL_BENCH_SPLIT=test
BENCH_DATA_DIR=/var/lib/sandy/cache/chutes-bench-data
HF_HOME=/var/lib/sandy/cache/hf
HF_DATASETS_CACHE=/var/lib/sandy/cache/hf/datasets
HF_HUB_CACHE=/var/lib/sandy/cache/hf/hub
HF_TOKEN=

# Optional: Benchmark judges/evaluators
AA_OMNISCIENCE_JUDGE_MODEL=
GDPVAL_JUDGE_MODEL=
GDPVAL_REFERENCE_CHAR_LIMIT=60000
CRITPT_EVAL_URL=https://artificialanalysis.ai/api/v2/critpt/evaluate
CRITPT_API_KEY=

# PDF Generation
PDF_FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
